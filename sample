<!DOCTYPE html>
<html>
<head>
  <title>BootstrapTable Combobox Example</title>
  <!-- Include necessary CSS and JavaScript files -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.css">
</head>
<body>
  <div class="container">
    <table id="myTable"></table>
  </div>

  <!-- Include necessary JavaScript files -->
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.12.1/bootstrap-table.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#myTable').bootstrapTable({
        columns: [
          {
            field: 'name',
            title: 'Name'
          },
          {
            field: 'comboboxField',
            title: 'Combobox Column',
            formatter: comboboxFormatter
          }
        ],
        data: [
          { name: 'Item 1', comboboxField: 'option1' },
          { name: 'Item 2', comboboxField: 'option2' },
          { name: 'Item 3', comboboxField: 'option3' }
        ],
        escape: true
      });
    });

    // Custom formatter function for combobox column
    function comboboxFormatter(value, row, index) {
      // Define your options here
      const options = [
        { value: 'option1', text: 'Option 1' },
        { value: 'option2', text: 'Option 2' },
        { value: 'option3', text: 'Option 3' }
      ];

      // Generate the HTML for the combobox
      const selectHtml = `<select class="form-control combobox" data-index="${index}">${options.map(option => `<option value="${option.value}" ${option.value === value ? 'selected' : ''}>${option.text}</option>`).join('')}</select>`;
      return selectHtml;
    }
  </script>
</body>
</html>
