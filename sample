 modelBuilder.Entity<Cookie>(entity =>
    {
        entity.HasKey(c => c.CookieId);

        entity.Property(c => c.CookieId)
            .IsRequired();

        entity.Property(c => c.Username)
            .IsRequired()
            .HasMaxLength(255);

        entity.Property(c => c.FirmCode)
            .IsRequired()
            .HasMaxLength(50);

        entity.Property(c => c.CreateDate)
            .IsRequired()
            .HasColumnType("datetime2(2)"); // Set column type to datetime2(2)

        entity.Property(c => c.ExpiryDate)
            .IsRequired()
            .HasColumnType("datetime2(2)"); // Set column type to datetime2(2)
    });
