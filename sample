function replaceQueryStringValue(key, newValue) {
    // Get the current query string
    var queryString = window.location.search.substring(1);

    // Parse the query string into an object
    var queryParams = {};
    queryString.split("&").forEach(function (param) {
        var pair = param.split("=");
        queryParams[pair[0]] = decodeURIComponent(pair[1] || "");
    });

    // Replace the value for the specified key
    queryParams[key] = newValue;

    // Reconstruct the query string
    var newQueryString = Object.keys(queryParams).map(function (key) {
        return key + "=" + encodeURIComponent(queryParams[key]);
    }).join("&");

    // Update the browser's address bar without reloading the page
    window.history.replaceState({}, "", "?" + newQueryString);

    // Optionally, you can reload the page if needed
    // window.location.reload();
}

// Example usage: replace value of 'exampleKey' with 'newValue'
replaceQueryStringValue('exampleKey', 'newValue');
