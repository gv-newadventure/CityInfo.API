// Example JSON string with unescaped ampersands and apostrophes
const jsonString = '{"text": "This is an example & JSON\'s"}';

// Regular expression to find unescaped ampersands and apostrophes
const regex = /([&'])/g;

// Replace unescaped ampersands and apostrophes with their respective escape sequences
const escapedJSONString = jsonString.replace(regex, (match, p1) => {
  if (p1 === '&') {
    return '&amp;';
  } else if (p1 === "'") {
    return '\\u0027';
  }
  return match;
});

// Parse the modified JSON string
try {
  const parsedJSON = JSON.parse(escapedJSONString);
  console.log(parsedJSON);
} catch (error) {
  console.error('Error parsing JSON:', error);
}
