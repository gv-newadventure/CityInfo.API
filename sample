using System;
using System.Xml;

class Program
{
    static void Main()
    {
        // Specify the XML file path
        string xmlFilePath = "path/to/your/file.xml";

        // Specify the XML nodes to be scrambled
        string[] nodesToScramble = { "SensitiveElement1", "SensitiveElement2" };

        // Load the XML document
        XmlDocument xmlDoc = new XmlDocument();
        xmlDoc.Load(xmlFilePath);

        // Scramble data for each specified node
        foreach (var nodeName in nodesToScramble)
        {
            ScrambleNodeData(xmlDoc, nodeName);
        }

        // Save the modified XML
        xmlDoc.Save("scrambled_data.xml");

        Console.WriteLine("XML data scrambled successfully.");
    }

    static void ScrambleNodeData(XmlDocument xmlDoc, string nodeName)
    {
        XmlNodeList nodes = xmlDoc.GetElementsByTagName(nodeName);

        foreach (XmlNode node in nodes)
        {
            // Example scrambling algorithm: replace content with dummy value
            string dummyValue = GenerateDummyValue();
            node.InnerText = dummyValue;
        }
    }

    static string GenerateDummyValue()
    {
        // Example: Generate a random string as a dummy value
        Random random = new Random();
        const string characters = "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789";
        return new string(Enumerable.Repeat(characters, 8)
          .Select(s => s[random.Next(s.Length)]).ToArray());
    }
}
