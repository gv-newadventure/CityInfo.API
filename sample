<!-- product-search-input.component.html -->

<div class="search-input-container">
  <label for="productName">Product Name:</label>
  <input type="text" id="productName" [(ngModel)]="searchParams.productName">

  <label for="color">Color:</label>
  <input type="text" id="color" [(ngModel)]="searchParams.color">

  <label for="minPrice">Min Price:</label>
  <input type="number" id="minPrice" [(ngModel)]="searchParams.priceRange?.min">

  <label for="maxPrice">Max Price:</label>
  <input type="number" id="maxPrice" [(ngModel)]="searchParams.priceRange?.max">

  <label for="category">Category:</label>
  <input type="text" id="category" [(ngModel)]="searchParams.category">

  <button (click)="performSearch()">Search</button>
</div>





<!-- product-search-output.component.html -->

