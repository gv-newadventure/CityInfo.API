using System;
using System.IO;

class Program
{
    static void Main()
    {
        // Specify the paths to your text files
        string[] textFilePaths = { "path/to/file1.txt", "path/to/file2.txt", "path/to/file3.txt" };

        // Specify the path for the merged output file
        string mergedOutputFilePath = "path/to/merged_output.txt";

        // Merge the content of text files
        MergeTextFiles(textFilePaths, mergedOutputFilePath);

        Console.WriteLine("Text files merged successfully.");
    }

    static void MergeTextFiles(string[] sourceFilePaths, string targetFilePath)
    {
        using (StreamWriter writer = new StreamWriter(targetFilePath))
        {
            foreach (string sourceFilePath in sourceFilePaths)
            {
                // Read the content of each source file and write it to the target file
                string content = File.ReadAllText(sourceFilePath);
                writer.Write(content);
            }
        }
    }
}
