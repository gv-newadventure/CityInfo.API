DECLARE @SiteCode VARCHAR(50)
DECLARE siteCursor CURSOR FOR
SELECT SiteCode FROM tbl_Sites

OPEN siteCursor
FETCH NEXT FROM siteCursor INTO @SiteCode

WHILE @@FETCH_STATUS = 0
BEGIN
    -- Insert into tbl_user for each SiteCode
    INSERT INTO tbl_user (Username, Password, SiteCode, OtherColumns)
    VALUES ('defaultUsername', 'defaultPassword', @SiteCode, 'defaultValue')

    FETCH NEXT FROM siteCursor INTO @SiteCode
END

CLOSE siteCursor
DEALLOCATE siteCursor
