 events: {
              'change .combobox': function (e, value, row, index) {
                const selectedValue = $(e.target).val();
                const $cell = $(`#myTable tr[data-index="${index}"] td:eq(2)`); // Replace 2 with the column index of the cell to disable
                if (selectedValue === 'disable') {
                  $cell.attr('contenteditable', 'false');
                } else {
                  $cell.attr('contenteditable', 'true');
                }
              }
