<!DOCTYPE html>
<html>
<head>
  <title>Bootstrap Table Editable Select Example</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <table id="table" data-toggle="table" data-pagination="true"></table>
  </div>

  <!-- Include Bootstrap, jQuery, and Bootstrap Table JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.16.0/bootstrap-table.min.js"></script>
  <script>
    $(function () {
      // Create column definitions
      var columns = [
        { field: 'id', title: 'ID' },
        { field: 'name', title: 'Name' },
        {
          field: 'gender',
          title: 'Gender Selection',
          editable: {
            type: 'select',
            source: { 'male': 'Male', 'female': 'Female' },
            onblur: 'submit'
          }
        }
      ];

      // Create table using Bootstrap Table
      $('#table').bootstrapTable({
        escape: true,
        showFooter: false,
        columns: columns,
        data: [
          { id: 1, name: 'John Doe', gender: 'male' },
          // Add more data rows as needed
        ]
      });

      // Handle cell editing event
      $('#table').on('editable-save.bs.table', function (e, field, row, oldValue, $el) {
        if (field === 'gender') {
          var selectedValue = $el.val();
          var index = $el.data('index');
          var $table = $('#table');
          $table.bootstrapTable('updateCell', {
            index: index,
            field: 'gender',
            value: selectedValue
          });

          // Perform additional actions here based on the selected gender
          console.log('Gender selected:', selectedValue);
        }
      });
    });
  </script>
</body>
</html>
