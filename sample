using System;
using System.Xml;

class Program
{
    static void Main()
    {
        // Specify the paths to your XML files
        string[] xmlFilePaths = { "path/to/file1.xml", "path/to/file2.xml", "path/to/file3.xml" };

        // Create a new XmlDocument to hold the merged content
        XmlDocument mergedDocument = new XmlDocument();

        // Create a root element for the merged document
        XmlElement rootElement = mergedDocument.CreateElement("MergedRoot");
        mergedDocument.AppendChild(rootElement);

        // Loop through each XML file and merge its content
        foreach (string xmlFilePath in xmlFilePaths)
        {
            XmlDocument xmlDoc = new XmlDocument();
            xmlDoc.Load(xmlFilePath);

            // Copy the nodes from the source document to the target document
            foreach (XmlNode node in xmlDoc.DocumentElement.ChildNodes)
            {
                XmlNode importedNode = mergedDocument.ImportNode(node, true);
                rootElement.AppendChild(importedNode);
            }
        }

        // Save the merged document to a new file
        mergedDocument.Save("merged_output.xml");

        Console.WriteLine("XML files merged successfully.");
    }
}
